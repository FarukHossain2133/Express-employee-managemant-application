<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <a id="home" href="/">Home page</a>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <table class='table'>
    <caption><%= title %></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Employee Type</th>
          <th>Hourly Rate</th>
          <th>Total Hours</th>
          <th>Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if(records.length > 0){ %>
          <% records.forEach(function(data){ %>
            <tr>
              <td><%= data.name %></td>
              <td><%= data.email %></td>
              <td><%= data.eType %></td>
              <td><%= data.hourlyRate %></td>
              <td><%= data.totalHour %></td>
              <td><%= data.total %></td>
              <td>
                <a id="btn-edit" href="/edit/<%= data._id %>"><i class="fa fa-edit"></i></a>
                <a id="btn-delete" href="/delete/<%= data._id %>"><i class="fa fa-trash"></i></a>
              </td>
            </tr>
          <% })}else{ %>
              <tr>
                <td colspan="6">No Result Found</td>
              </tr>
          <% } %>
      </tbody>
    </table>
    
     <h2 id="fformCaption">Filter Employee Records</h2>
    <div id="fform">
         <form action="/search" method="post">
        <label for="name">By Name</label>
        <input type="text" id="name" name="filtername"  placeholder="search by name">
        <label for="email">By Email</label>
        <input type="text" id="email" name="filteremail"  placeholder="search by email">
        <label for="etype">By Employee Type</label>
        <select id="etype" name="filteretype">
          <option value="hourly">hourly</option>
          <option value='fixed'>fixed</option>
        </select>
        <%# <input type="text" id="etype" name="filteretype" placeholder="search by emp type"> %>
        <input  type="submit" type="button"  value="submit" name="submit" id="fbtn">
      </form>
    </div>

    <div class="eform">
      <form action="/" method="post">
        <fieldset>
            <legend>Employee entry form</legend>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="etypee">Employee Type</label>
                <select id="etypee" name="etype" >
                  <option value="hourly">Hourly</option>
                  <option value="fixed">Fixed</option>
                </select>
                <%# <input type="text" id="etype" name="etype" value="" placeholder="Enter etype"> %>
            </div>
            <div class="form-group">
                <label for="hrate">Hourly Rate</label>
                <input type="number" id="hrate" name="hrate" value="" placeholder="Enter hrate">
            </div>
            <div class="form-group">
                <label for="thour">Total Hours</label>
                <input type="number" id="thour" name="thour" value="" placeholder="Enter thour">
            </div>
              <input class="btn" type="submit" type="button" name="submit" value="submit">
        </fieldset>
    </form>
    </div>
    
  </body>
</html>
